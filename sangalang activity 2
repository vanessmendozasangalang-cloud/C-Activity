    cout << "Last Name: ";
    cin >> ln;

    cout << "First Name: ";
    cin >> fn;

    cout << "Middle Name: ";
    cin >> mn;

    cout << "Age: ";
    cin >> Age;
    
    cout << "Year & Program: ";
    cin  >> yearProgram;

       

    cout << "\n____________________________\n";
    cout << "Student Information" << endl;
    cout << "USN: " << usn << endl;
    cout << "Lastname: " << ln << endl;
    cout << "Firstname: " << fn << endl;
    cout << "Middlename: " << mn << endl;
